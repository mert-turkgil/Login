@model IEnumerable<Login.Identity.User>

<div class="user-management mt-4">
    <h4>User Management</h4>
    <!-- Users Table -->
    <table id="blogsTable" class="table table-striped table-bordered users-table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Email</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.Email</td>
                    <td>
                        <a asp-action="UserEdit" asp-controller="Home" asp-route-id="@user.Id" class="btn-custom btn-edit">
                            <i class="fa fa-edit"></i> Edit
                        </a>
                        <form asp-action="UserDelete" asp-controller="Home" method="post" style="display: inline-block;" onsubmit="return confirm('Are you sure you want to delete this user?');">
                            <input type="hidden" name="id" value="@user.Id" />
                            <button type="submit" class="btn-custom btn-delete">
                                <i class="fa fa-trash"></i> Delete
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
